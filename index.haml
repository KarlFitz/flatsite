	%body
		.page-wrapper	
			
			%nav#menu.menu-white
				
				%a.hamburger{:href => "#menu"} Menu

				.logo
					%a{:href => "index"} 
						%img{:src => "assets/event-army-invert.png"}

				%ul
					/ %li
					/ 	%a{:href => "index"} Home
					/ %li
					/ 	%a{:href => "hire"} Hire
					/ %li
					/ 	%a{:href => "work"} Work


					/ %li.signinlink
					/ 	%a.popup.button.small{:href => '#login-modal', :data => {:"effect" => "mfp-move-vertical"}} Sign In


			%section.hero.text-center
				
				.container
					%h1.lead 

						Instantly find <span class="amp">&amp;</span> book trusted 

						<span class="rotate">Event and Film Professionals, Promotional Staff, AV Technicians, Site Crew, Event and Film Professionals, Sound Engineers, Movie Extras, Production Assistants, Event and Film Professionals, Make-Up Artists, Event Managers, Wardrobe Assistants, Event and Film Professionals, Stage Managers, Boom Operators</span>

						<span class="rotate-fallback">Event and Film Professionals</span>
					
					%h4 An army of experts, anytime, anywhere

					.button-group
						%a.button.popup{:href => '#invite-modal', :data => {:"effect" => "mfp-move-vertical"}} Request An Invite
						/ %a.button{:href => "hire"} Hire Now
						/ %a.button{:href => "work"} Work Now

			.strip
				.container.text-center
					%h3 The ultimate resource for Event &amp; Film professionals
					%p We’re not an agency, think of us like a clever introduction service for staff

			.split-pane

				.split-pane-left
					.container

						%h2 Hire

						%p.lead.primary Find &amp; book the best staff from Ireland’s largest crew database

						%p.small Set your own criteria and be instantly connected to an army of top free lance talent. Get instant feedback on staff availability and never be stuck for quality people again. Stay professional, with formalised invoicing and payment procedures for every freelancer.  

						/ %a.button{:href => "hire"} Hire Now



						
				.split-pane-right
					.container

						%h2 Work

						%p.lead.primary We connect top staff with top companies across the country

						%p.small Turn your free time into fee time with work notifications sent straight to your phone. Keep your ducks in order with our online calendar and mobile booking system. Avoid papercuts. We'll look after all the boring stuff for you, almost like having your own secretary.

						/ %a.button{:href => "work"} Work Now

			%footer.page-footer
				.container.text-center
					%h6 &copy; Copyright Event Army Ltd. 2014



			#login-modal.modal.mfp-with-anim.mfp-hide
				
				%h2.text-center Sign in to Your Account

				// %p Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.

				%form.login-form{:action=> "work-details", :method => "get"}
					
					%input{:type => "text", :placeholder => "Username"}	
					%input{:type => "password", :placeholder => "Password"}	
					%input{:type => "submit", :value => "Sign In Now"}	

				.login-facebook

					%a.button.large.facebook-connect-button{:href => "contractors/auth/facebook"}
						Sign in with Facebook


			#callback-modal.modal.mfp-with-anim.mfp-hide
				
				%h2.text-center Arrange a Call-Back

				
				%form.login-form

					%p.text-center Enter your phone number below and a member of our team will call you back at the earliest convenience
				
					%input{:type => "text", :placeholder => "Phone Number"}	
					%input{:type => "submit", :value => "Arrange a Call-Back"}	

					
			#invite-modal.modal.mfp-with-anim.mfp-hide
				
				%h2.text-center Request an Invite
				%form.login-form

					%p.text-center Enter your email address below and a member of our team will contact you at the earliest convenience
				
					%input{:type => "text", :placeholder => "Email Address"}	
					%input{:type => "submit", :value => "Request An Invite"}	

